package com.persistent.InventorySystem;

import java.time.LocalDate;

public class PurchaseOrder {
	private int poNumber;
	private LocalDate orderDate;
	private LocalDate shipDate;
	private OrderItem oI[];
	public LocalDate getShipDate() {
		return shipDate;
	}
	public OrderItem[] getoI() {
		return oI;
	}
	public OrderItem getoIByNumber(int n) {
		return oI[n];
	}
	public void setoI(OrderItem[] oI) {
		this.oI = oI;
	}
	public int getPoNumber() {
		return poNumber;
	}
	public void setPoNumber(int poNumber) {
		this.poNumber = poNumber;
	}
	public LocalDate getOrderDate() {
		return orderDate;
	}
	public void setOrderDate(LocalDate orderDate) {
		this.orderDate = orderDate;
	}
	public boolean isShipped() {
		if(orderDate.compareTo(LocalDate.now())>0) {
		    return false;
		} else {
		    return true;
		} 
	}
	public double sumItems() {
		double s = 0;
		for(int i=0;i<oI.length;i++) {
			s = s + oI[i].getTotal();
		}
		return s;
	}
	public void setShipDate(LocalDate date) {
		this.shipDate = date;
	}
	public void create(int poNumber,LocalDate orderDate) {
		this.poNumber = poNumber;
		this.orderDate = orderDate;
	}
	public OrderItem[] getItems() {
		return oI;
	}
}
